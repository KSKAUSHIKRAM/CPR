<ImageLabelButton>:
    orientation: 'vertical'
    spacing: 5
    size_hint: None, None
    width: 140
    height: self.minimum_height  # Dynamically adjust to content height

    Image:
        id: img
        source: root.image_source
        size_hint: 1, None
        height: 80
        allow_stretch: True
        keep_ratio: True

    Label:
        id: lbl
        text: root.text
        font_size: '16sp'
        color: 1, 1, 1, 1
        size_hint: 1, None
        height: self.texture_size[1] + 10
        halign: 'center'
        valign: 'middle'
        text_size: self.width, None

