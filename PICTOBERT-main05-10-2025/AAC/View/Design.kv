#:import Window kivy.core.window.Window
<SplashScreen>:
    name: "splash"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # white background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: [0, 15, 0, 0]

        # --------------------------------------------------------
        # LOGO SECTION (auto-scales)
        # --------------------------------------------------------
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 1, 0.45

            Image:
                id: logo_img
                source: 'logo.png'
                size_hint: None, None
                width: min(self.parent.width * 0.75, 1000)
                height: min(self.parent.width * 0.75, 1000)
                allow_stretch: True
                keep_ratio: True

        # --------------------------------------------------------
        # PROMPT TEXT (auto-scales)
        # --------------------------------------------------------
        Label:
            id: prompt_lbl
            text: 'Please select your current location:'
            font_size: str(int(Window.height * 0.035)) + "sp"
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: self.texture_size[1] + 20
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None

        # --------------------------------------------------------
        # ICON ROW (auto-fitted)
        # --------------------------------------------------------
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            size_hint: 1, 0.35
            pos_hint: {"y": 0.03}

            BoxLayout:
                id: location_row
                orientation: 'horizontal'
                spacing: dp(20)
                padding: [dp(10), 0]
                size_hint_y: None
                height: dp(180)
                size_hint_x: 1
<YesNoScreen>:
    name: "yes_no_screen"

    BoxLayout:
        orientation: 'horizontal'
        spacing: 15
        padding: [15, 15, 15, 15]

                # ✅ YES COLUMN
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            spacing: 10

            Label:
                text: "YES"
                font_size: str(int(Window.height * 0.05)) + "sp"
                bold: True
                color: 0, 0.5, 0, 1
                size_hint_y: None
                height: self.texture_size[1] + 10

            ScrollView:
                do_scroll_y: True
                do_scroll_x: False

                GridLayout:
                    id: yes_grid
                    cols: 2
                    spacing: 10
                    padding: 10
                    size_hint_y: None
                    height: self.minimum_height

        # ❌ NO COLUMN
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            spacing: 10

            Label:
                text: "NO"
                font_size: str(int(Window.height * 0.035)) + "sp"
                bold: True
                color: 0.7, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1] + 10

            ScrollView:
                do_scroll_y: True
                do_scroll_x: False

                GridLayout:
                    id: no_grid
                    cols: 2
                    spacing: 10
                    padding: 10
                    size_hint_y: None
                    height: self.minimum_height

